<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%- messages() %>
    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>

    <div id="add-classification">
        <form id="classForm" action="/inv/addClassification" method="post">
        <div>
          <div>
            <h2>Add Classification</h2>
          </div>
          <div>
            <span>* Required</span>
            <div>
              <label>
                  <span>Classification Name:</span><span>*</span>
                  <input aria-label="Classification Name" type="text" name="classification_name" aria-required="true" required>
              </label>
            </div>
            <div class="form-button">
                <input id="submitButton" type="submit" name="submit" value="Submit">
             </form>
              </div>
              </div>
       
