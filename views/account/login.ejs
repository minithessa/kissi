<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<%- messages() %>


 
<div class="form-box">
<section class="login_form">
    <form id="loginForm" action="/account/login" method="post">
        <div class="email">
            <label for="login_email">Email: </label>
            <input id="login_email" name="account_email" type="email" placeholder="youremail@exemple.com" 
            required value="<%= locals.account_email %>"
            > 
        </div>

        <div class="password">
            <label for="login_password">Password: </label>
            <input id="login_password" name="account_password" type="password" placeholder="Password" 
            required
            > 
            
        </div>

        <button type="submit" class="form-btn">Login</button>

        <div class="register">
            <p>No account? </p>
            <a href="/account/register">Register here</a>
            
        </div>
    </form>

</div>
 </section>
