<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/');
} %>

<%- messages() %>
<% if (errors) { %>
  <ul">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<div>
  <form action="/account/delete" method="post">
    <div>
      <div>
        <h2>Delete Account</h2>
      </div>
      <div>
          <input type="hidden" name="account_id" value="<%= locals.account_id %>">
       <div>
          <label>
            <span>First Name:</span>
            <input type="text" name="account_firstname" value="<%= locals.account_firstname %>" readonly>
          </label>
        </div>
        <div>
          <label>
            <span>Last Name:</span>
            <input type="text" name="account_lastname" value="<%= locals.account_lastname %>" readonly>
          </label>
        </div>
        <div>
          <label>
            <span>Account Email:</span>
            <input  type="text" name="account_email" value="<%= locals.account_email %>" readonly>
          </label>
        </div>
        <div>
          <button id="submitButton" type="submit" name="submit" value="Delete Account">Delete Account</button>
          <button id="cancelButton" type="cancel" name="cancel" value="Cancel">Cancel</button>
        </div>
      </div>
      <div>
        <p>Confirm Deletion - The delete is permanent.</p>
      </div>
    </div>
  </form>
</div>
